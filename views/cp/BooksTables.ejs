            const the_filtering = the_data.filter((item)=>item.metadata.name.includes(tdata.name))
            console.log(the_filtering,tdata)
            usershow(the_filtering)
    }
  const form_of_edit =document.querySelector('.edituserform')
  function edit(id){
    let the_user = the_data.find(item=>item._id===id)
    form_of_edit.id.value = the_user._id
    form_of_edit.name.value = the_user.metadata.name
    form_of_edit.filename.value = the_user.filename
    form_of_edit.length.value = the_user.length/1000000+"MB"
    form_of_edit.price.value = the_user.metadata.overview
    form_of_edit.overview.value = the_user.metadata.category
    console.log(the_user)
  }

  async function save(){

    const id =form_of_edit.id.value 
    const name=form_of_edit.name.value 
