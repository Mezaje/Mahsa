    `
  })
  userform.innerHTML=inneruserdata
  }

  const searchinput = document.getElementById('search')
  searchinput.addEventListener('keyup',()=>{
        filters()
    })


    data()



    const filters=()=>{
            let type1 =document.getElementById('search').value
            console.log(the_data)
